[user]
	name = Mitsushige Komiya

[include]
    path = .gitconfig.local

[github]
    user = MKomiya

[color]
    diff        = auto
    grep        = auto
    branch      = auto
    status      = auto
    interactive = auto

[core]
    editor       = /usr/bin/vim
    autocrlf     = input
    quotepath    = false
    excludesfile = ~/.gitexcludes # 自分の環境でのみ除外したいファイルを書く
[alias]
	st = status
	br = branch
	co = checkout
